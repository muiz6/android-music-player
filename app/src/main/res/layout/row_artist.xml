<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginHorizontal="@dimen/margin_m"
	android:layout_marginVertical="@dimen/margin_m"
	android:background="@drawable/bg_item">

	<com.google.android.material.card.MaterialCardView
		android:id="@+id/row_artist_drawable_container"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintDimensionRatio="1:1"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		style="@style/Widget.App.CardView.Outlined">

		<ImageView
			android:id="@+id/row_artist_drawable"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="centerInside"
			android:src="@drawable/ic_music_artist" />
	</com.google.android.material.card.MaterialCardView>

	<TextView
		android:id="@+id/row_artist_title"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/margin_m"
		android:layout_marginTop="@dimen/margin_l"
		android:ellipsize="end"
		android:lines="1"
		app:layout_constraintBottom_toTopOf="@+id/row_artist_album_count"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintLeft_toRightOf="@id/row_artist_drawable_container"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/row_artist_album_count"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/margin_m"
		android:layout_marginBottom="@dimen/margin_l"
		android:textColor="?android:attr/textColorSecondary"
		android:textSize="@dimen/size_text_small"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintLeft_toRightOf="@+id/row_artist_drawable_container"
		app:layout_constraintRight_toLeftOf="@id/row_artist_song_count"
		app:layout_constraintTop_toBottomOf="@+id/row_artist_title" />

	<TextView
		android:id="@+id/row_artist_song_count"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/margin_l"
		android:paddingHorizontal="@dimen/radius_l"
		android:textColor="?android:attr/textColorSecondary"
		android:textSize="@dimen/size_text_small"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintTop_toBottomOf="@+id/row_artist_title" />
</androidx.constraintlayout.widget.ConstraintLayout>
