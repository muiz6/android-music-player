<?xml version="1.0" encoding="utf-8"?>
<navigation
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/navigation_home"
	app:startDestination="@id/exploreFragment">

	<fragment
		android:id="@+id/exploreFragment"
		android:name="com.muiz6.musicplayer.ui.main.home.explore.ExploreFragment"
		android:label="@string/app_name"
		tools:layout="@layout/fragment_explore">

		<action
			android:id="@+id/action_exploreFragment_to_searchFragment"
			app:destination="@id/searchFragment" />

		<action
			android:id="@+id/action_exploreFragment_to_browseFragment"
			app:destination="@id/browseFragment" />
	</fragment>

	<fragment
		android:id="@+id/searchFragment"
		android:name="com.muiz6.musicplayer.ui.main.home.search.SearchFragment"
		tools:layout="@layout/fragment_search" />

	<fragment
		android:id="@+id/browseFragment"
		android:name="com.muiz6.musicplayer.ui.main.home.browse.BrowseFragment"
		tools:layout="@layout/fragment_browse">

		<argument
			android:name="queryTypeId"
			app:argType="string" />

		<argument
			android:name="query"
			app:argType="string" />
	</fragment>
</navigation>